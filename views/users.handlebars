<!-- welcome to the user -->
<div class="flex justify-center bg-white p-10 m-5 rounded-xl shadow-2xl">
  <h1 id="username" class="font-dnd text-3xl">Welcome!</h1>
</div>

<!-- bio and new character -->
<div class="flex flex-col items-center laptop:flex-row laptop:m-10 mt-20 rounded-2xl">
  <div class="bg-white rounded-xl shadow-2xl m-5 p-5 w-full laptop:w-3/4 flex-grow">
    <h3 class="font-semibold border-b-2 border-black text-center text-2xl" id="userNotes">Notepad</h3>
    <textarea id="notepad" type="text" name="notepad"
              class="block w-full h-60 p-3 mt-2 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner"
              value="{{notes}}"></textarea>
    <button id="note-save" class=" mr-5 shadow-2xl p-1 px-2 mt-4 text-white rounded bg-blue-900 hover:bg-red-900 mb-5">Save
      Changes</button>
  </div>

  <div
       class="bg-white rounded-xl justify-self-center shadow-2xl m-5 p-5 object-center flex-grow tablet:w-1/3 laptop:w-1/4">
    <ul>
      {{#each characters as |character|}}
      <li class="m-3 flex justify-center">
        <p class="pr-3">{{character.name}}</p>
        <a href="/character/{{character.id}}" type="button"
           class=" shadow-2xl p-2 px-3 text-xs desktop\:font-extrabold text-white rounded bg-blue-900 hover:bg-red-900">
          View and Edit
        </a>
      </li>
      {{/each}}
    </ul>
    <div class="m-3  flex justify-center">

      <a href="/character" type="button"
         class="shadow-2xl p-2 px-3 text-xs text-white rounded bg-blue-900 hover:bg-red-900">

        + Add New Character
      </a>
    </div>
  </div>
</div>

